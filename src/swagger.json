{
  "openapi": "3.0.0",
  "info": {
    "title": "Movies API (API de filmes)",
    "description": "API de filmes/Movies API @Gamatec",
    "contact": {
      "email": "rianbarbosa@outlook.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/movies/": {
      "get": {
        "summary": "List All Movies",
        "description": "This route will return all movies",
        "tags": ["Movies"],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Movies"
                }
              }
            }
          },
          "400": {
            "description": "Missing title or rank"
          }
        }
      },
      "post": {
        "summary": "Create a movie :)",
        "description": "This route will create a new movie",
        "tags": ["Movies"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Movies"
              },
              "examples": {
                "movie": {
                  "value": {
                    "rank": "1",
                    "title": "The Blue Pen"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Movies"
                }
              }
            }
          },
          "400": {
            "description": "Missing title or rank"
          }
        }
      }
    },
    "/movies/{id}": {
      "get": {
        "summary": "Get a movie by the ID",
        "description": "This route will return the movie that match the ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Enter the ID to search the movie",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Movies"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID"
          }
        }
      },
      "delete": {
        "summary": "Delete a movie by the ID",
        "description": "This route will delete by the ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Enter the ID to delete a movie",
            "required": true
          }
        ],
        "responses": {
          "404": {
            "description": "Invalid ID"
          },
          "204": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Movies"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update a movie by the ID",
        "description": "This route will update the movie by the ID",
        "tags": ["Movies"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Enter the ID to delete a movie",
            "required": true
          }
        ],
        "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Movies"
                },
                "examples": {
                  "movie": {
                    "value": {
                      "rank": "1",
                      "title": "The Blue Pen"
                    }
                  }
                }
              }
            }
          },
        "responses": {
          "404": {
            "description": "Invalid ID ( Not Found :( )"
          },
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Movies"
                }
              }
            }
          }
        }
      }
    }
    },
    "components": {
      "schemas": {
        "Movies": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "rank": {
              "type": "string"
            },
            "id": {
              "type": "number"
            }
          }
        }
      }
    }
}
